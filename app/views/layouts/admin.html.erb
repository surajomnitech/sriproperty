<!DOCTYPE html>
<html>
  <head>
    <title>Admin Panel | SriProperty</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <%= javascript_importmap_tags %>

    <style>
      .sidebar {
        min-height: 100vh;
        background: #2c3e50;
        color: white;
      }
      .sidebar .nav-link {
        color: rgba(255,255,255,.8);
        padding: 1rem;
        transition: all 0.3s;
      }
      .sidebar .nav-link:hover {
        color: white;
        background: rgba(255,255,255,.1);
      }
      .sidebar .nav-link.active {
        background: rgba(255,255,255,.1);
        color: white;
      }
      .main-content {
        background: #f8f9fa;
        min-height: 100vh;
      }
      .navbar {
        background: white;
        box-shadow: 0 2px 4px rgba(0,0,0,.1);
      }
      .card {
        border: none;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
      }
      .card-header {
        background: white;
        border-bottom: 1px solid rgba(0,0,0,.1);
      }
      .table th {
        font-weight: 600;
        background: #f8f9fa;
      }
      .border-left-primary {
        border-left: 4px solid #4e73df;
      }
    </style>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 px-0 sidebar">
          <div class="d-flex flex-column p-3">
            <h5 class="mb-4 text-white">Admin Panel</h5>
            <ul class="nav flex-column">
              <li class="nav-item">
                <%= link_to admin_dashboard_path, class: "nav-link #{'active' if current_page?(admin_dashboard_path)}" do %>
                  <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_users_path, class: "nav-link #{'active' if controller_name == 'users'}" do %>
                  <i class="fas fa-users me-2"></i> Users
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_properties_path, class: "nav-link #{'active' if controller_name == 'properties'}" do %>
                  <i class="fas fa-building me-2"></i> Properties
                <% end %>
              </li>
              <li class="nav-item mt-auto">
                <%= link_to root_path, class: "nav-link" do %>
                  <i class="fas fa-arrow-left me-2"></i> Back to Site
                <% end %>
                <%= button_to destroy_user_session_path, method: :delete, class: "nav-link w-100 text-start border-0 bg-transparent" do %>
                  <i class="fas fa-sign-out-alt me-2"></i> Logout
                <% end %>
              </li>
            </ul>
          </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10 main-content px-4">
          <nav class="navbar navbar-expand-lg mb-4">
            <div class="container-fluid">
              <h4 class="mb-0"><%= content_for?(:title) ? yield(:title) : 'Dashboard' %></h4>
              <div class="ms-auto">
                <span class="text-muted">
                  Welcome, <%= current_user.full_name %>
                </span>
              </div>
            </div>
          </nav>

          <% if notice %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <%= notice %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% end %>

          <% if alert %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= alert %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% end %>

          <%= yield %>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>