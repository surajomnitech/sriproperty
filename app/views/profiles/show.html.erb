<div class="container py-4">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card shadow">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h4 class="mb-0">My Profile</h4>
          <%= link_to edit_profile_path, class: 'btn btn-primary' do %>
            <i class="fas fa-edit me-1"></i> Edit Profile
          <% end %>
        </div>
        <div class="card-body">
          <div class="row mb-3">
            <div class="col-sm-3">
              <strong>Name:</strong>
            </div>
            <div class="col-sm-9">
              <%= @user.full_name %>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-sm-3">
              <strong>Email:</strong>
            </div>
            <div class="col-sm-9">
              <%= @user.email %>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-sm-3">
              <strong>Account Type:</strong>
            </div>
            <div class="col-sm-9">
              <span class="badge bg-primary"><%= @user.role&.titleize %></span>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-sm-3">
              <strong>Phone Numbers:</strong>
            </div>
            <div class="col-sm-9">
              <% if @user.phone_numbers.any? %>
                <ul class="list-unstyled">
                  <% @user.phone_numbers.each do |phone| %>
                    <li><%= phone.number %></li>
                  <% end %>
                </ul>
              <% else %>
                <p class="text-muted">No phone numbers added</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>