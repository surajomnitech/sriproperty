<div class="row">
  <div class="col-md-12">
    <div class="d-flex justify-content-between align-items-center">
      <h1>Users</h1>
    </div>

    <table class="table mt-4">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Status</th>
          <th>Joined</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= "#{user.first_name} #{user.last_name}" %></td>
            <td><%= user.email %></td>
            <td><span class="badge bg-<%= user.admin? ? 'danger' : 'primary' %>"><%= user.role %></span></td>
            <td><span class="badge bg-<%= user.active? ? 'success' : 'warning' %>"><%= user.status %></span></td>
            <td><%= user.created_at.strftime("%B %d, %Y") %></td>
            <td>
              <%= link_to 'View', admin_user_path(user), class: 'btn btn-sm btn-info' %>
              <%= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-sm btn-primary' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>