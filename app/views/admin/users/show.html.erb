<div class="row">
  <div class="col-md-12">
    <div class="d-flex justify-content-between align-items-center">
      <h1>User Details</h1>
      <%= link_to 'Edit User', edit_admin_user_path(@user), class: 'btn btn-primary' %>
    </div>

    <div class="card mt-4">
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <h5>Basic Information</h5>
            <p><strong>Name:</strong> <%= "#{@user.first_name} #{@user.last_name}" %></p>
            <p><strong>Email:</strong> <%= @user.email %></p>
            <p><strong>Role:</strong> <span class="badge bg-<%= @user.admin? ? 'danger' : 'primary' %>"><%= @user.role %></span></p>
            <p><strong>Status:</strong> <span class="badge bg-<%= @user.active? ? 'success' : 'warning' %>"><%= @user.status %></span></p>
            <p><strong>Joined:</strong> <%= @user.created_at.strftime("%B %d, %Y") %></p>
          </div>
          <div class="col-md-6">
            <h5>Phone Numbers</h5>
            <% if @user.phone_numbers.any? %>
              <ul class="list-unstyled">
                <% @user.phone_numbers.each do |phone| %>
                  <li>
                    <%= phone.number %>
                    <span class="badge bg-<%= phone.verified? ? 'success' : 'warning' %>">
                      <%= phone.verified? ? 'Verified' : 'Unverified' %>
                    </span>
                  </li>
                <% end %>
              </ul>
            <% else %>
              <p>No phone numbers added</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>