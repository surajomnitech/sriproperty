<%= form_with(model: [:admin, package], local: true) do |f| %>
  <% if package.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(package.errors.count, "error") %> prohibited this package from being saved:</h4>
      <ul>
        <% package.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :free_listings_count, 'Number of Free Listings', class: 'form-label' %>
    <%= f.number_field :free_listings_count, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :max_photos_per_listing, 'Maximum Photos per Listing', class: 'form-label' %>
    <%= f.number_field :max_photos_per_listing, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <div class="form-check">
      <%= f.check_box :is_default, class: 'form-check-input' %>
      <%= f.label :is_default, 'Set as Default Package', class: 'form-check-label' %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :status, class: 'form-label' %>
    <%= f.select :status, Package.statuses.keys, {}, class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Back', admin_packages_path, class: 'btn btn-secondary' %>
  </div>
<% end %>